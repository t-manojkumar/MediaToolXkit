<Page
    x:Class="ToolX.ExtractFramesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Margin="12" Spacing="8">
            <TextBlock Text="Extract Frames from Video" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Load a video, choose how many frames to extract, and save them as images." Style="{ThemeResource BodyTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button x:Name="LoadButton" Content="Load Video" Click="LoadButton_Click"/>
                <TextBlock Text="Frames to Extract:" VerticalAlignment="Center"/>
                <NumberBox x:Name="FramesInput" Value="10" Minimum="1" Maximum="1000" SpinButtonPlacementMode="Compact"/>
                <Button x:Name="ExtractButton" Content="Extract and Save" IsEnabled="False" Click="ExtractButton_Click"/>
                <ProgressRing x:Name="Progress" IsActive="False" Margin="12,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <MediaPlayerElement x:Name="VideoPlayer" Grid.Row="1" AutoPlay="True" AreTransportControlsEnabled="True" Margin="12"/>
    </Grid>
</Page>