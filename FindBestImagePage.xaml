<Page
    x:Class="ToolX.FindBestImagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ToolX"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <DataTemplate x:Key="ImageGridViewTemplate" x:DataType="local:AnalyzableImage">
            <Grid Height="150" Width="150" Margin="4">
                <Image Source="{x:Bind Thumbnail}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Border BorderBrush="Gold" BorderThickness="8" Visibility="{x:Bind IsBestVisibility, Mode=OneWay}"/>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Margin="12" Spacing="8">
            <TextBlock Text="Find Best Image" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Load a group of similar photos, and the app will find the one with the best focus." Style="{ThemeResource BodyTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button x:Name="LoadButton" Content="Load Images" Click="LoadButton_Click"/>
                <Button x:Name="AnalyzeButton" Content="Analyze Sharpness" IsEnabled="False" Click="AnalyzeButton_Click"/>
                <ProgressRing x:Name="Progress" IsActive="False" Margin="12,0,0,0"/>
            </StackPanel>
            <TextBlock x:Name="ResultText" Margin="0,12,0,0" Style="{ThemeResource SubtitleTextBlockStyle}" FontWeight="Bold"/>
        </StackPanel>

        <GridView Grid.Row="1" x:Name="ImageGrid" Margin="12"
                  ItemTemplate="{StaticResource ImageGridViewTemplate}"
                  SelectionMode="None" IsItemClickEnabled="False">
            <GridView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsWrapGrid Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </GridView.ItemsPanel>
        </GridView>
    </Grid>
</Page>