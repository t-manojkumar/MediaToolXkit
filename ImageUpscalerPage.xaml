<Page
    x:Class="ToolX.ImageUpscalerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:canvas="using:Microsoft.Graphics.Canvas.UI.Xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid RowDefinitions="Auto, *">
        <StackPanel Grid.Row="0" Margin="12" Spacing="8">
            <TextBlock Text="Image Upscaler" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Load an image and choose a scale factor to enlarge it with high quality." Style="{ThemeResource BodyTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,12,0,0">
                <Button x:Name="LoadButton" Content="Load Image" Click="LoadButton_Click"/>
                <TextBlock Text="Scale Factor:" VerticalAlignment="Center"/>
                <RadioButton x:Name="Scale2x" Content="2x" IsChecked="True" GroupName="ScaleFactor"/>
                <RadioButton x:Name="Scale4x" Content="4x" GroupName="ScaleFactor"/>
                <RadioButton x:Name="Scale8x" Content="8x" GroupName="ScaleFactor"/>
                <Button x:Name="SaveButton" Content="Upscale and Save" IsEnabled="False" Click="SaveButton_Click"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" Margin="12" BorderThickness="1" BorderBrush="{ThemeResource SystemControlForegroundBaseLowBrush}">
            <canvas:CanvasControl x:Name="ImageCanvas" Draw="ImageCanvas_Draw"/>
        </Border>
    </Grid>
</Page>