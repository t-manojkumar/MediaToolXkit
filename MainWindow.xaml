<Window
    x:Class="ToolX.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:Name="NavView"
                    PaneDisplayMode="LeftCompact"
                    IsSettingsVisible="True"
                    SelectionChanged="NavView_SelectionChanged"
                    Header="ToolX - Image &amp; Video Toolkit">
        <NavigationView.MenuItems>
            <NavigationViewItem x:Name="HomeNavItem" Content="Home" Tag="HomePage"/>
            <NavigationViewItemHeader Content="Tools"/>
            <NavigationViewItem x:Name="SplitterNavItem" Content="Image Splitter" Tag="ImageSplitterPage"/>
            <NavigationViewItem x:Name="UpscalerNavItem" Content="Image Upscaler" Tag="ImageUpscalerPage"/>
            <NavigationViewItem x:Name="ExtractFramesNavItem" Content="Extract Frames" Tag="ExtractFramesPage"/>
            <NavigationViewItem x:Name="FindBestNavItem" Content="Find Best Image" Tag="FindBestImagePage"/>
        </NavigationView.MenuItems>
        <Frame x:Name="ContentFrame"/>
    </NavigationView>
</Window>